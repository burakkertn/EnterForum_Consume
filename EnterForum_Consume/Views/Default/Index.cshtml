@model List<EnterForum_Consume.Dtos.Topic.ResultTopicDto>
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
@await Component.InvokeAsync("_HeadPartial")
<body>
    <section class="headernav">

        <div class="navbar">
            <a href="index.html"><h3>Enter Forum</h3></a>
            @await Component.InvokeAsync("_NavbarPartial")
            @await Component.InvokeAsync("_SearchPartial")
            @await Component.InvokeAsync("_Navbar2Partial")
        </div>

    </section>
        <section class="content">
            <div class="container">
                <div class="row m-15 m-l-0">
                    <div class="col-xs-6">
                        <form action="03_new_topic.html" method="post" class="form">
                            <button class="btn btn-primary" onclick="window.open('./newpost.html')"><i class="fa fa-plus-square" aria-hidden="true"></i> Start New Topic</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class='col-md-8'>
                    @foreach (var item in Model)
                    {
                        <div class="post">
                            <div class="wrap-ut pull-left">
                                <div class="userinfo pull-left">
                                    <div class="avatar">
                                        <img src="images/avatar.jpg" alt="">
                                        <div class="status green">&nbsp;</div>
                                    </div>

                                </div>
                                <div class="posttext pull-left">
                                <h2><a href="/Default/Detail/@item.TopicID">@item.Title</a></h2>
                                    <small>@item.CreateTime</small>
                                    <div class="post-content m-t-15">
                                        <p>
                                            @item.Description
                                        </p>
                                    </div>
                                    <div class="tag">
                                        <span class="badge badge-color1">Yorum Yaz</span>
                                      
                                    </div>
                                   

                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="postinfo pull-left">
                                <div class="dotmenu dropdown">
                                    <a href="#" class="dots  dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <div class="dot"></div>
                                    </a>
                                    <div class="dropdown-menu" role="dot-menu" aria-labelledby="dropdownMenuButton">
                                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><i class="fa fa-star" aria-hidden="true"></i> Detaya Git</a></li>
                                        <li role="presentation"><a role="menuitem" tabindex="-2" href="#"><i class="fa fa-comment" aria-hidden="true"></i>  Yorum Yaz</a></li>

                                    </div>
                                </div>
                               
                            

                            </div>
                            <div class="clearfix"></div>
                        </div>
                    }



                </div>
                @await Component.InvokeAsync("_CategoriesPartial")
            </div>
        </section>
    </div>


    </div>
    @await Component.InvokeAsync("_FooterPartial")
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <!-- get jQuery from the google apis -->

    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</body>

</html>