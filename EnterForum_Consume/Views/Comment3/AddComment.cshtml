
<div class="post comment">
    <form method="post" class="form" asp-action="AddComment" asp-controller="Comment3">
        <div class="topwrap">
            <div class="userinfo pull-left">
                <div class="avatar">
                    <img src="~/forum/images/avatar.png" alt="">
                    <div class="status green">&nbsp;</div>
                </div>

            </div>
            <div class="posttext pull-left ">
                <div class="textwraper m-b-10">

                    <textarea name="description" placeholder="Yorum Yaz..."></textarea>
                </div>

            </div>
            <div class="clearfix m-b-10"></div>
        </div>
        <div class="postinfobot">
            <div class="pull-right postreply m-b-10">
                <div class="pull-left"><button type="submit" id="btnSubmit" class="btn btn-primary">Yorum Yap</button></div>
                <div class="clearfix"></div>
            </div>


            <div class="clearfix"></div>
        </div>
    </form>
</div>
